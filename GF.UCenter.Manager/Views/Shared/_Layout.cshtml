<!DOCTYPE html>
<html ng-app="ucenter">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GF.UCenter.Manager</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/">UCenter管理平台</a>
            </div>
            <!-- /.navbar-header -->
                @Html.Partial("_LoginPartial")
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li><a href="~/Home/AppList"><i class="fa fa-gamepad"></i> App管理</a></li>
                        <li><a href="~/Home/UserList"><i class="fa fa-gamepad"></i> 账号管理</a></li>
                        <li><a href="~/Home/OrderList"><i class="fa fa-gamepad"></i> 订单管理</a></li>
                        <li><a href="~/Home/RealtimeGlance"><i class="fa fa-gamepad"></i> 实时概况</a></li>
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-gamepad"></i> 玩家分析 <b class="caret"></b></a>
                            <ul class="nav nav-second-level">
                                <li><a href="~/Home/NewUsers"> 新增玩家</a></li>
                                <li><a href="~/Home/ActiveUsers"> 活跃玩家</a></li>
                                <li><a href="~/Home/Stay"> 留存统计</a></li>
                                <li><a href="~/Home/Lost"> 流失统计</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-gamepad"></i> 在线分析 <b class="caret"></b></a>
                            <ul class="nav nav-second-level">
                                <li><a href="~/Home/OnlineAnalytics"> 在线分析</a></li>
                                <li><a href="~/Home/OnlineBehaviour"> 在线习惯</a></li>
                            </ul>
                        </li>
                    </ul>
                    <!-- /#side-menu -->
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <div class="footer">
            <footer class="footer"></footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/ucenter")
    @RenderSection("scripts", false)
</body>
</html>
