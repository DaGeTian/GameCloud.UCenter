@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.MongoDB
@using GameCloud.Manager.App.Models
@model LoginViewModel
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "登录";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">登录</h3>
            </div>
            <div class="panel-body">
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <fieldset>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="邮箱地址" name="email" type="email" autofocus>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="密码" name="password" type="password" value="">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />记住我?
                                </label>
                            </div>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <p>
                            <button type="submit" class="btn btn-lg btn-success btn-block">登录</button>
                        </p>
                        @*<p class="text-right">
                                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">注册新账号?</a>
                            </p>*@
                        <p class="text-right">
                            <a asp-action="ForgotPassword">忘记密码?</a>
                        </p>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
