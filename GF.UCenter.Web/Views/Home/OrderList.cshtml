@{
    ViewBag.Title = "订单列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @if (ViewBag.AccountName != null)
    {
        <h1>订单列表 - @ViewBag.AccountName</h1>
    }
    else
    {
        <h1>订单列表</h1>
    }
    <div id="orderList"></div>
</div>
@Scripts.Render("~/bundles/table")
<script type="text/babel">
    var acc =  "@ViewBag.AccountId";
    var params = (!!acc)?"?accountId=@ViewBag.AccountId":"";

    ReactDOM.render(
    <OrderListBox url={'/api/orders'+params} />,
    document.getElementById("orderList")
    );
</script>
